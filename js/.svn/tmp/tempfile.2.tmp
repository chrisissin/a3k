function enteringgame_res(data)
{
	if(data.code == "-666")
	{
		alert(data.msg);
		window.location = loginaddress;
		return;
	}	
	if(data.code == "-777")
	{
		setplayer(data.msg);
		invocapt();
		return;
	}	
	if(data.code == "-1")
	{
		alert(data.msg);
		window.location = loginaddress;
		return;
	}	
	if(data.code == "-2")
	{
		initwin();
		notifyactionresult(data.msg);
		return;
	}
	if(data.msg != "")
	{
		initwin();
		notifyactionresult(data.msg);
		return;
	}		
	setplayer(data.code);
	 $('#apopup').hidePopup();
	$("#apopup").html("");	
	$("#apopup").hide();
	loadint();
}

